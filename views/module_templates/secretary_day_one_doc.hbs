<tr>
    <td colspan="15" class="center aligned">
        <div class="ui header">Daily Appointments of Dr. {{doctor.lastname}}</div>
    </td>
</tr>
{{#each data}}
<tr>
    <td class="center aligned">
        <span class="ui black text">{{slot}}</span>
    </td>
    <td colspan="14" class="center aligned daily appointment cell">
        <table class="ui large basic compact fixed celled structured unstackable table">
            <tbody>
                {{#each appointments}}
                <td class="left aligned pink side colored colored colored colored strip" >
                    <div class="ui medium header">
                        {{firstname}} {{lastname}}
                    </div>
                    <div class="ui medium text">
                        {{#each process}}
                            {{processname}},
                        {{/each}}
                    </div>
                    <div class="ui medium text">
                        {{#each doctor}}
                            Dr. {{lastname}},
                        {{/each}}
                    </div>
                </td>
                {{/each}}
            </tbody>
        </table>
    </td>
</tr>
{{/each}}